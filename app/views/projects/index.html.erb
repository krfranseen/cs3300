<% provide(:page_title, 'All Projects') %>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center"><%= @student.username %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= image_tag(@student.icon, style:'width:75%') %>
    </div>
    
    <div class="col-6">

      <br>

      <div class="row">
        <div class="col-12">
          <%= simple_format(@student.introduction) %>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-12">
          <%= simple_format(@student.degrees) %>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-12">
          <%= simple_format(@student.resume) %>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-12">

      <div class="table-responsive">
        <table class="table">
         <thead>
             <tr>
               <th>Title</th>
               <th>Description</th>
               <th>Complexity</th>
               <th>Date</th>
               <th colspan="3"></th>
             </tr>
         </thead>

         <tbody>
            <% @projects.each do |project| %>
             <tr>
               <td><%= project.title %></td>
               <td><%= project.short_descr %></td>
               <td><%= project.complexity %></td>
                <td><%= project.date %></td>
               <td><%= link_to 'Show', project %></td>
              
               <% if student_signed_in? %>
                 <td><%= link_to 'Edit', edit_project_path(project) %></td>
                 <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               <% end %>

             </tr>
           <% end %>
         </tbody>
       </table>
      </div>
      <br>

      <% if student_signed_in? %>
        <%= link_to 'New Project', new_project_path %>
      <% end %>


    </div>
  </div>
</div>
